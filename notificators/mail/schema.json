{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Mail",
  "definitions": {
    "config":
      { "type": "object",
        "required": ["id","type","from","transport","templateDir","template"],
        "properties":{
          "id": {"type": "string"},
          "type": {"type": "string", "pattern": "\\bmail\\b"},
          "from":{"type":"string"},
          "transport":{"type":"string"},
          "templateDir":{"type":"string"},
          "template":{"type":"string"}
      }
    },
    "params":
    { "type": "object",
      "required": ["id","message","title"],
      "properties":{
        "id": {"type": "string"},
        "title": {"type": "string"},
        "recipients": {"type": "array"},
        "attachments": {"type": "array"},
        "message":{"type":"string"}
      }
    }
  }
}